<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ForgotPasswordPageActivity"
    android:orientation="vertical"
    android:background="@color/white">


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/batman"
        android:drawableTop="@drawable/batman"
        android:layout_marginBottom="400dp"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="125dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="334dp"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:text="FoodRunner"
        android:textSize="29sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/baloo"
        android:text="Enter your registered email below:"
        android:textColor="@color/grey"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/forgotemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/lessroundedcorners"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:fontFamily="@font/baloo"
        android:hint="Email Address"
        android:paddingStart="2dp"
        android:paddingLeft="2dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp" />

    <Button
        android:id="@+id/forgotsendbtn"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgotemail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@drawable/roundedcornerswithrealpurplecolor"
        android:fontFamily="@font/baloo"
        android:text="SEND"
        android:textColor="@color/white" />


</RelativeLayout>